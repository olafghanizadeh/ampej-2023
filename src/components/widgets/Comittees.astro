---
import { storyblokEditable} from '@storyblok/astro'
const { blok } = Astro.props
import Icon from 'astro-icon';
---

<section class="text-gray-600 body-font dark:text-slate-400">
    <div class="container px-5 py-24 mx-auto">
      <div class="flex justify-center flex-wrap">
        {blok.comittees.map((comittee) => (
        <div class="mx-12 my-12">
          <h3 class="text-3xl font-bold leading-tighter tracking-tighter mb-4 font-heading">{comittee.comittee_name}</h3>
          <ul>
            {comittee.members.map(({firstName, lastName, affiliation, link}) => (
              <li class="underline text-lg">
                <a href={link.url}>
                {lastName}, {firstName} {affiliation ? (affiliation) : ''}
                <Icon class="w-6 h-6 inline" name="mdi:link" />
              </a>
              </li>
            ))}
          </ul>
        </div>
        ))}
      </div>
    </div>
  </section>