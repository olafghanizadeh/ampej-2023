---
import { storyblokEditable} from '@storyblok/astro'
const { blok } = Astro.props
import { YouTube } from 'astro-embed'
---

<section {...storyblokEditable(blok)}>
	<div class="max-w-6xl mx-auto px-4 sm:px-6">
		<div class="py-12 md:py-20 flex gap-5 flex-wrap justify-center md:flex-nowrap">
			<div class="pb-10 md:pb-16 w-full md:w-1/2">
				<h1 class="text-5xl md:text-[3.50rem] font-bold leading-tighter tracking-tighter mb-4 font-heading">
					{blok?.title}
				</h1>
				<div class="max-w-3xl">
					<p class="text-xl text-gray-600 mb-8 dark:text-slate-400">
						{blok?.intro}
					</p>
				</div>
			</div>
			<div>
				<div class="mb-8 m-auto">
					<YouTube id="WqjkKP8fFkw" />
				</div>
			</div>
		</div>
	</div>
</section>
