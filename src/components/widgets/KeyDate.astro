---
import { format } from 'date-fns'
const {date, name, last} = Astro.props
---

<div class="flex">
    <div class="flex flex-col items-center mr-4">
        <div>
            <div class="flex items-center justify-center w-48 h-10 rounded-full border-primary-500 border-2">
                <span class="font-bold">{format(new Date(date), 'do MMMM y')}</span>
            </div>
        </div>
        {!last &&
        <div class="w-px h-full bg-gray-300 dark:bg-slate-500"></div>
        }
    </div>
    <div class="pt-1 pb-8">
        <p class="mb-2 text-xl font-bold text-gray-900 dark:text-slate-300">{name}</p>
    </div>
</div>