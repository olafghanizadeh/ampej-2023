---
import { storyblokEditable } from '@storyblok/astro';
import PageLayout from '~/layouts/PageLayout.astro';
import ProgrammeDay from '~/components/programme/ProgrammeDay.astro';
const { blok } = Astro.props;
---

<PageLayout {...storyblokEditable(blok)}>
  <section class="max-w-6xl mx-auto space-y-16 mt-16 px-8">
    <h1 class="text-3xl text-center font-bold">{blok.title}</h1>
    <div class="grid md:grid-cols-2 md:justify-items-center">
      {
        blok.programme?.map((blok) => {
          return <ProgrammeDay blok={blok} isExcerpt={true} />;
        })
      }
    </div>

    {
      blok.programme?.map((blok) => {
        return <ProgrammeDay blok={blok} isExcerpt={false} />;
      })
    }
  </section>
</PageLayout>
